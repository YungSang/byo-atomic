{
    "comment": "Default/demo trees generated by the CentOS Atomic SIG",

    "osname": "centos-atomic",
    "ref": "centos-atomic/7/x86_64/base",
    
    "repos": ["centos", "walters-rpm-ostree", "walters-cockpit-el7", "epel", "jasonbrooks-c7-atomic"],

    "selinux": true,

    "bootstrap_packages": ["filesystem", "glibc", "nss-altfiles", "shadow-utils",
			   "centos-release"],

    "packages": ["kernel", "rpm-ostree", "lvm2",
		 "btrfs-progs", "e2fsprogs", "xfsprogs",
		 "syslinux-extlinux", "authconfig",
		 "gnupg2", "@core"],

    "default_target": "multi-user.target"
}
